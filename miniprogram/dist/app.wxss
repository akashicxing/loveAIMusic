page{background-color:#f8f9fa;font-family:-apple-system,BlinkMacSystemFont,Segoe UI,PingFang SC,Hiragino Sans GB,Microsoft YaHei,Helvetica Neue,Helvetica,Arial,sans-serif}.container{min-height:100vh;padding:20rpx}.card{background:#fff;border-radius:12rpx;box-shadow:0 2rpx 8rpx #0000001a;margin-bottom:20rpx;padding:20rpx}.btn-primary{background:linear-gradient(135deg,#ff6b9d,#ff8fab);border:none;border-radius:25rpx;box-shadow:0 4rpx 12rpx #ff6b9d4d;color:#fff;font-size:16rpx;font-weight:500;padding:12rpx 24rpx;transition:all .3s ease}.btn-primary:active{box-shadow:0 2rpx 8rpx #ff6b9d4d;transform:translateY(1rpx)}.btn-secondary{background:#fff;border:2rpx solid #ff6b9d;border-radius:25rpx;color:#ff6b9d;font-size:16rpx;font-weight:500;padding:10rpx 24rpx;transition:all .3s ease}.btn-secondary:active{background:#ff6b9d;color:#fff}.text-center{text-align:center}.text-primary{color:#ff6b9d}.text-secondary{color:#666}.mb-10{margin-bottom:10rpx}.mb-20{margin-bottom:20rpx}.mt-10{margin-top:10rpx}.mt-20{margin-top:20rpx}.loading{align-items:center;display:flex;justify-content:center;padding:40rpx}.loading .loading-text{color:#666;margin-left:10rpx}.empty-state{color:#666;padding:60rpx 20rpx;text-align:center}.empty-state .empty-icon{font-size:48rpx;margin-bottom:20rpx;opacity:.5}.empty-state .empty-text{font-size:16rpx;margin-bottom:20rpx}