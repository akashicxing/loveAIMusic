.profile{background:#f8f9fa;min-height:100vh}.profile-header{align-items:center;background:linear-gradient(135deg,#ff6b9d,#ff8fab);display:flex;justify-content:space-between;padding:40rpx 20rpx 20rpx}.user-info{align-items:center;display:flex}.user-avatar{border-radius:30rpx;height:60rpx;margin-right:16rpx;width:60rpx}.user-avatar.default-avatar{align-items:center;background:#fff3;display:flex;justify-content:center}.user-avatar.default-avatar .avatar-text{color:#fff;font-size:24rpx}.user-details .user-name{color:#fff;display:block;font-size:18rpx;font-weight:600;margin-bottom:4rpx}.user-details .user-desc{color:#fffc;display:block;font-size:14rpx}.vip-badge{background:#fff3;border-radius:12rpx;padding:6rpx 12rpx}.vip-badge .vip-text{color:#fff;font-size:12rpx;font-weight:600}.profile-content{padding:20rpx}.stats-section{background:#fff;border-radius:12rpx;box-shadow:0 2rpx 8rpx #0000001a;display:flex;justify-content:space-around;margin-bottom:20rpx;padding:20rpx}.stat-item{text-align:center}.stat-item .stat-number{color:#ff6b9d;display:block;font-size:24rpx;font-weight:600;margin-bottom:4rpx}.stat-item .stat-label{color:#666;display:block;font-size:12rpx}.menu-section{background:#fff;border-radius:12rpx;box-shadow:0 2rpx 8rpx #0000001a;overflow:hidden}.menu-item{align-items:center;border-bottom:1rpx solid #f0f0f0;display:flex;padding:16rpx 20rpx}.menu-item:last-child{border-bottom:none}.menu-item:active{background:#f8f9fa}.menu-icon{font-size:20rpx;margin-right:12rpx}.menu-text{color:#333;flex:1;font-size:16rpx}.menu-arrow{color:#ccc;font-size:18rpx}.profile-footer{padding:20rpx}.logout-btn{font-size:16rpx;padding:12rpx 24rpx;width:100%}